@model EmprestimoModel

@{
    ViewData["Title"] = "Cadastrar empréstimo de Livro";
}

<div class="container p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1>Cadastro de Empréstimos</h1>
    </div>

    @if (!string.IsNullOrEmpty((string?)TempData["MensagemSucesso"]))
    {
        <div class="alert alert-dismissible alert-success" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (!string.IsNullOrEmpty((string?)TempData["MensagemFalha"]))
    {
        <div class="alert alert-dismissible alert-danger" role="alert">
            @TempData["MensagemFalha"]
        </div>
    }

    <form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="Recebedor" class="form-label fw-bold">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o livro?">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label fw-bold">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando o livro?">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="LivroEmprestado" class="form-label fw-bold">Livro:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="LivroEmprestado" placeholder="Qual é o livro que está sendo emprestado?">
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Cadastrar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">
                Voltar
            </a>
        </div>
    </form>

</div>
